<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.yipinketang.springcloud</groupId>
    <artifactId>springcloud-microservice</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
        <spring-cloud.version>Greenwich.M1</spring-cloud.version>
        <spring-cloud-alibaba.version>0.2.2.RELEASE</spring-cloud-alibaba.version><!--github上推荐的毕业版本依赖关系中Greenwich.M1对应2.1.1.RELEASE，但是这个地方导入不了2.1.1.RELEASE-->
    </properties>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.1.0.RELEASE</version><!--parent中的version不能引用properties中定义的变量-->
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${spring-cloud.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-alibaba-dependencies</artifactId>
                <!--这个版本号可以参考github上的wiki文档说明，如果版本号跟springcloud不匹配可能发生一些位置错误-->
                <version>${spring-cloud-alibaba.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <modules>
        <!--模拟微服务被调用方（集群）服务模块-->
        <module>provider_1_service</module>
        <!--模拟微服务被调用方服务模块-->
        <module>provider-service</module>
        <!--eureka 注册中心-->
        <module>eureka-server</module>
        <!--eureka 微服务客户端模块-->
        <module>eureka-client</module>
        <!--模拟微服务调用方服务模块-->
        <module>consumer-service</module>
        <!--zipkin 链路监控模块-->
        <module>zipkin-monitor</module>
        <!--spring cloud stream 消息系统集成模块 -->
        <module>stream</module>
        <!--网关模块-->
        <module>gateway</module>
    </modules>

    <repositories>
        <!--spring 远程maven仓库-->
        <repository>
            <id>spring-milestones</id>
            <name>Spring Milestones</name>
            <url>https://repo.spring.io/milestone</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
</project>